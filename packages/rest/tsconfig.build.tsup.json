{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    //    "module": "es2022",
    "outDir": "./esm",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["src/**/__tests__/*", "src/**/*.test.ts"]
}

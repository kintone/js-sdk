{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "UMD",
    "noEmit": false,
    "outDir": "./umd",
    "resolveJsonModule": false
  },
  "include": ["src/**/*", "package.json"],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.test.ts",
    "src/index.ts",
    "src/platform/node.ts"
  ]
}

{
  "extends": "./tsconfig.typecheck.json",
  "compilerOptions": {
    // Excluding DOM APIs
    "lib": [
      "es5",
      "es2015.promise",
      "es2015.iterable",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ]
  },
  // Files that use deps only available on Browser environment
  "exclude": [
    "src/index.browser.ts",
    "src/platform/browser.ts",
    "src/__tests__/**",
    "src/**/__tests__/**",
    "src/**/*.test.ts"
  ]
}

{
  "name": "@kintone/plugin-packer",
  "version": "9.0.0",
  "description": "Package your kintone plugin with pure JavaScript",
  "keywords": [
    "kintone"
  ],
  "homepage": "https://github.com/kintone/js-sdk/tree/main/packages/plugin-packer",
  "bugs": "https://github.com/kintone/js-sdk/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kintone/js-sdk.git",
    "directory": "packages/plugin-packer"
  },
  "license": "MIT",
  "author": {
    "name": "Cybozu, Inc.",
    "url": "https://cybozu.co.jp"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kintone-plugin-packer": "bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "from-manifest.js"
  ],
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "tsc --build --force",
    "postbuild": "run-p js css",
    "build:dev": "tsc --build --force --watch",
    "clean": "rimraf dist",
    "css": "postcss --config postcss.config.js ./node_modules/normalize.css/normalize.css > docs/dist/normalize.min.css",
    "fix": "pnpm lint --fix",
    "jest": "jest",
    "js": "webpack --mode production",
    "js:dev": "webpack serve --mode development",
    "lint": "eslint \"*.{js,ts}\" bin src site test --max-warnings 0",
    "site": "run-p js css",
    "site:dev": "run-p css js:dev",
    "site:test": "jest --config site/jest.config.js",
    "start": "npm-run-all -l -s clean build -p build:dev site:dev",
    "test": "run-p jest site:test",
    "test:ci": "pnpm test"
  },
  "dependencies": {
    "@kintone/plugin-manifest-validator": "^11.0.0",
    "chokidar": "^3.6.0",
    "debug": "^4.4.3",
    "denodeify": "^1.2.1",
    "meow": "^9.0.0",
    "mkdirp": "^3.0.1",
    "node-rsa": "~1.1.1",
    "stream-buffers": "^3.0.3",
    "yauzl": "^3.2.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.9.1",
    "@types/debug": "^4.1.12",
    "@types/node-rsa": "^1.1.4",
    "@types/stream-buffers": "^3.0.7",
    "@types/yauzl": "^2.10.3",
    "@types/yazl": "^2.4.6",
    "ajv": "^8.17.1",
    "array-flatten": "^3.0.0",
    "assert": "^2.1.0",
    "babel-plugin-replace-ts-export-assignment": "^0.0.2",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "constants-browserify": "^1.0.0",
    "crypto-browserify": "^3.12.1",
    "cssnano": "^7.1.1",
    "execa": "^5.1.1",
    "glob": "^10.4.5",
    "globals": "^15.15.0",
    "jest-environment-jsdom": "^29.7.0",
    "normalize.css": "^8.0.1",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "process": "^0.11.10",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^3.1.0",
    "rimraf": "^6.0.1",
    "setimmediate": "^1.0.5",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "webpack": "^5.101.3",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "engines": {
    "node": ">=20"
  }
}

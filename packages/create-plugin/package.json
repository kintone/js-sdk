{
  "name": "@kintone/create-plugin",
  "version": "7.0.0",
  "description": "A CLI tool for creating a kintone plugin!",
  "bin": {
    "create-plugin": "bin/cli.js",
    "create-kintone-plugin": "bin/cli.js"
  },
  "main": "dist/src/index.js",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kintone/js-sdk.git",
    "directory": "packages/create-plugin"
  },
  "homepage": "https://github.com/kintone/js-sdk/tree/master/packages/create-plugin",
  "bugs": "https://github.com/kintone/js-sdk/issues",
  "dependencies": {
    "chalk": "^4.1.2",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "lodash": "^4.17.21",
    "meow": "^9.0.0",
    "node-rsa": "^1.1.1",
    "normalize-path": "^3.0.0",
    "os-locale": "^5.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.5",
    "sort-package-json": "^1.57.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^8.2.9",
    "@types/lodash": "^4.14.199",
    "@types/node-rsa": "^1.1.2",
    "@types/normalize-path": "^3.0.0",
    "@types/rimraf": "^3.0.2",
    "cross-env": "^7.0.3"
  },
  "files": [
    "bin",
    "dist/src",
    "templates"
  ],
  "scripts": {
    "start": "pnpm build --watch",
    "build": "pnpm clean && tsc --build --force",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src --max-warnings 0",
    "fix": "pnpm lint --fix",
    "unittest": "jest --testPathIgnorePatterns=/__tests__/e2e\\.test\\.ts$",
    "e2e": "cross-env NODE_ENV=e2e jest --testPathPattern=/__tests__/e2e\\.test\\.ts$",
    "test": "pnpm unittest",
    "test:all": "run-p test e2e",
    "test:ci": "pnpm test:all"
  },
  "keywords": [
    "kintone"
  ],
  "author": {
    "name": "Cybozu, Inc.",
    "url": "https://cybozu.co.jp"
  },
  "license": "MIT"
}

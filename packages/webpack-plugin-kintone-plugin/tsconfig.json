{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2015"],
    "strict": true,
    "target": "es5",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": [

{
  extends: [
    'github>cybozu/renovate-config',
    ':prConcurrentLimitNone',
  ],
  ignorePaths: [
    '**/node_modules/**',
    '**/bower_components/**',
    '**/vendor/**',
    '**/__tests__/**',
    '**/test/**',
    '**/tests/**',
    '**/__fixtures__/**',
  ],
  npm: {
    managerFilePatterns: [
      '/^packages/create-plugin/templates/([^/]+/)*with-plugin-uploader\\.json$/',
    ],
    packageRules: [
      {
        semanticCommitType: 'chore',
        matchPackageNames: [
          '*',
        ],
      },
      {
        matchDepTypes: [
          'devDependencies',
        ],
        matchUpdateTypes: [
          'minor',
        ],
        automerge: true,
        matchPackageNames: [
          '*',
        ],
      },
    ],
  },
  packageRules: [
    {
      matchDepTypes: [
        'action',
      ],
      pinDigests: true,
      matchPackageNames: [
        '!actions/{/,}**',
        '!cybozu/{/,}**',
      ],
    },
  ],
}

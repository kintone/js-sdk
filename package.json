{
  "name": "@kintone/js-sdk",
  "version": "1.0.0",
  "description": "packages for kintone customizations",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream",
    "preinitial:release": "yarn prerelease",
    "initial:release": "lerna publish from-package --conventional-commits",
    "prerelease": "lerna run prerelease --stream",
    "release": "lerna publish --conventional-commits",
    "pretest": "jest --rootDir __tests__",
    "test": "lerna run test --stream",
    "test:ci": "lerna run test:ci --stream"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kintone/js-sdk.git"
  },
  "keywords": [
    "kintone"
  ],
  "author": "kintone",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@cybozu/eslint-config": "^10.0.2",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "typescript": "^3.8.3"
  }
}

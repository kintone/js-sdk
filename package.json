{
  "name": "@kintone/js-sdk",
  "version": "1.0.0",
  "description": "packages for kintone customizations",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "prelint": "yarn build",
    "lint": "lerna run lint --stream",
    "preinitial:release": "yarn prerelease",
    "initial:release": "lerna publish from-package --conventional-commits",
    "prerelease": "lerna run prerelease --stream",
    "release": "lerna publish --conventional-commits",
    "pretest": "yarn build && jest --rootDir __tests__",
    "test": "lerna run test --stream",
    "pretest:ci": "yarn pretest",
    "test:ci": "lerna run test:ci --stream"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kintone/js-sdk.git"
  },
  "keywords": [
    "kintone"
  ],
  "author": "kintone",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@cybozu/eslint-config": "^11.0.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^13.13.32",
    "eslint": "^7.13.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  }
}
